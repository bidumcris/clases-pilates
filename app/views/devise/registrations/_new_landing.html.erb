<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "devise-form" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email, "Email" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "tu@email.com" %>
  </div>

  <div class="form-group">
    <%= f.label :password, "Contraseña" %>
    <% if @minimum_password_length %>
      <small class="form-hint">(<%= @minimum_password_length %> caracteres mínimo)</small>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "••••••••" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Confirmar Contraseña" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "••••••••" %>
  </div>

  <%# El nivel siempre será inicial por defecto, no se muestra en el formulario %>
  <%= f.hidden_field :level, value: 'inicial' %>
  <%= f.hidden_field :class_type, value: 'grupal' %>

  <div class="form-actions">
    <%= f.submit "Registrarse", class: "btn btn-primary btn-block" %>
  </div>

  <div class="form-links">
    <%= link_to "¿Ya tienes cuenta? Inicia sesión", "#", class: "link", onclick: "document.querySelector('[data-tabs-target=\"button\"]:first-child').click(); return false;" %>
  </div>
<% end %>

