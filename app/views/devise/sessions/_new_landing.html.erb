<% if flash[:alert].present? %>
  <div class="alert alert-error devise-alert">
    <%= flash[:alert] %>
  </div>
<% end %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "devise-form" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email, "Email" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "tu@email.com" %>
  </div>

  <div class="form-group">
    <%= f.label :password, "Contraseña" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "••••••••" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-group checkbox-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "Recordarme" %>
    </div>
  <% end %>

  <div class="form-actions">
    <%= f.submit "Iniciar Sesión", class: "btn btn-primary btn-block" %>
  </div>

  <div class="form-links">
    <%= link_to "¿Olvidaste tu contraseña?", new_password_path(resource_name), class: "link" %>
  </div>
<% end %>

