<!-- Sección de Login/Registro para Alumnos -->
<section class="landing-login-section">
  <div class="container">
    <div class="acceso-header">
      <%= image_tag "energia-pilates/1. logotipo/EP_logotipo 1.png", alt: "Energía Pilates", class: "acceso-logo" %>
      <h1 class="acceso-title">Acceso para Alumnos</h1>
      <p class="acceso-subtitle">Gestiona tus clases, cancelaciones y recuperos de forma fácil y rápida</p>
      <div class="acceso-back">
        <%= link_to "Volver", root_path, class: "btn btn-outline-primary" %>
      </div>
    </div>
    
    <div class="login-section-content">
      <div class="login-info">
        <h2>Beneficios</h2>
        <ul class="features-list">
          <li>✓ Consulta tu calendario personal de clases</li>
          <li>✓ Gestiona tus cancelaciones hasta 2hs antes.</li>
          <li>✓ Gestiona tus recuperos de clases</li>
          <li>✓ Recibe notificaciones de cupos disponibles en horarios completos</li>
          <li>✓ Si tu clase es un día feriado podrás recuperarla</li>
        </ul>
      </div>
      <div class="login-forms" data-controller="tabs">
        <div class="login-tabs">
          <button class="tab-button active" data-tabs-target="button" data-action="click->tabs#switch">Iniciar Sesión</button>
          <button class="tab-button" data-tabs-target="button" data-action="click->tabs#switch">Registrarse</button>
        </div>
        
        <div class="tab-content active" data-tabs-target="content">
          <% resource ||= User.new %>
          <% resource_name ||= :user %>
          <% devise_mapping ||= Devise.mappings[:user] %>
          <%= render partial: "devise/sessions/new_landing", locals: { resource: resource, resource_name: resource_name, devise_mapping: devise_mapping } %>
        </div>
        
        <div class="tab-content" data-tabs-target="content">
          <% resource ||= User.new %>
          <% resource_name ||= :user %>
          <% devise_mapping ||= Devise.mappings[:user] %>
          <% @minimum_password_length ||= Devise.password_length.min %>
          <%= render partial: "devise/registrations/new_landing", locals: { resource: resource, resource_name: resource_name, devise_mapping: devise_mapping } %>
        </div>
      </div>
    </div>
  </div>
</section>

