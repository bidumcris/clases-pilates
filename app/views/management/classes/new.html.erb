<div class="admin-form-page admin-services-page">
  <div class="admin-page-header">
    <h1>Configurar servicios de salas</h1>
    <%= link_to "Volver", management_classes_path, class: "btn btn-outline" %>
  </div>

  <div class="admin-section">
    <p class="admin-services-intro">
      Elegí una sala para configurar su servicio (horarios, duración de turnos y límites de reservas).
    </p>

    <div class="admin-services-list">
      <% circuito = Room.find_by(room_type: :circuito) %>
      <% mat = Room.find_by(room_type: :planta_baja_mat_accesorios) %>
      <% reformer = Room.find_by(room_type: :planta_alta_privadas) %>

      <% if circuito %>
        <div class="admin-service-card">
          <div class="admin-service-card-main">
            <h3>Circuito - Planta Alta</h3>
            <p>Configurar horarios, duración y límites del servicio de Circuito.</p>
          </div>
          <%= link_to edit_management_room_path(circuito), class: "btn btn-sm btn-warning admin-service-edit-btn", title: "Editar servicio" do %>
            <i class="glyphicon glyphicon-edit"></i> Editar servicio
          <% end %>
        </div>
      <% end %>

      <% if mat %>
        <div class="admin-service-card">
          <div class="admin-service-card-main">
            <h3>Mat y Accesorios - Planta Alta</h3>
            <p>Configurar horarios, duración y límites del servicio de Mat y Accesorios.</p>
          </div>
          <%= link_to edit_management_room_path(mat), class: "btn btn-sm btn-warning admin-service-edit-btn", title: "Editar servicio" do %>
            <i class="glyphicon glyphicon-edit"></i> Editar servicio
          <% end %>
        </div>
      <% end %>

      <% if reformer %>
        <div class="admin-service-card">
          <div class="admin-service-card-main">
            <h3>Reformer - Planta Baja</h3>
            <p>Configurar horarios, duración y límites del servicio de Reformer.</p>
          </div>
          <%= link_to edit_management_room_path(reformer), class: "btn btn-sm btn-warning admin-service-edit-btn", title: "Editar servicio" do %>
            <i class="glyphicon glyphicon-edit"></i> Editar servicio
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
