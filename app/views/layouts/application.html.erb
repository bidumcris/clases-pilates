<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Energía Pilates" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <%# Enable PWA manifest for installable apps (make sure to enable in config/routes.rb too!) %>
    <%#= tag.link rel: "manifest", href: pwa_manifest_path(format: :json) %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%# Includes all stylesheet files in app/assets/stylesheets %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <% if user_signed_in? %>
      <nav class="navbar">
        <div class="navbar-brand">
          <%= link_to dashboard_path, class: "navbar-logo" do %>
            <%= image_tag "energia-pilates/1. logotipo/EP_logotipo 1.png", alt: "Energía Pilates", class: "navbar-logo-img", onerror: "this.style.display='none'; this.nextElementSibling.style.display='inline';" %>
            <span style="display: none;">Energía Pilates</span>
          <% end %>
        </div>
        <div class="navbar-menu">
          <% if current_user.admin? %>
            <%= link_to "Gestión", management_root_path, class: "navbar-item" %>
          <% elsif current_user.instructor? %>
            <%= link_to "Gestión", management_root_path, class: "navbar-item" %>
          <% else %>
            <%= link_to "Mi Actividad", mi_actividad_path, class: "navbar-item" %>
            <%= link_to "Ver Agenda", agenda_path, class: "navbar-item" %>
            <%= link_to "Créditos", creditos_path, class: "navbar-item" %>
            <%= link_to "Solicitudes", requests_path, class: "navbar-item" %>
          <% end %>
          <div class="navbar-user">
            <span><%= current_user.email %></span>
            <%= button_to "Cerrar Sesión", destroy_user_session_path, method: :delete, class: "btn-logout" %>
          </div>
        </div>
      </nav>
      
      <% if notice %>
        <div class="alert alert-success" data-controller="alert" data-alert-auto-hide-value="3000">
          <%= notice %>
        </div>
      <% end %>
      
      <% if alert %>
        <div class="alert alert-error" data-controller="alert" data-alert-auto-hide-value="5000">
          <%= alert %>
        </div>
      <% end %>

      <main class="main-content">
        <%= yield %>
      </main>
    <% else %>
      <!-- Landing Page - Sin navbar -->
      <% if notice %>
        <div class="alert alert-success" data-controller="alert" data-alert-auto-hide-value="3000">
          <%= notice %>
        </div>
      <% end %>
      
      <% if alert %>
        <div class="alert alert-error" data-controller="alert" data-alert-auto-hide-value="5000">
          <%= alert %>
        </div>
      <% end %>

      <%= yield %>

      <div class="floating-social" aria-label="Accesos rápidos">
        <%= link_to "https://wa.me/5493584830778", target: "_blank", rel: "noopener", class: "floating-social-btn floating-social-btn--whatsapp", aria: { label: "WhatsApp" } do %>
          <span class="floating-social-icon" aria-hidden="true">
            <svg viewBox="0 0 32 32" width="22" height="22" xmlns="http://www.w3.org/2000/svg">
              <path fill="currentColor" d="M16 3C9.4 3 4 8.3 4 14.8c0 2.4.7 4.7 2.1 6.7L5 29l7.7-1.9c1.9 1 4.1 1.5 6.3 1.5 6.6 0 12-5.3 12-11.8S22.6 3 16 3zm0 22.4c-2 0-3.9-.5-5.6-1.6l-.4-.2-4.6 1.1 1.1-4.4-.3-.4c-1.2-1.8-1.9-3.9-1.9-6.1C4.3 9.6 9.6 4.6 16 4.6S27.7 9.6 27.7 15.8 22.4 25.4 16 25.4zm6.7-6.1c-.4-.2-2.1-1-2.5-1.1-.3-.1-.6-.2-.9.2-.3.4-1 1.1-1.2 1.4-.2.2-.4.3-.8.1-.4-.2-1.5-.5-2.9-1.7-1.1-1-1.8-2.2-2-2.6-.2-.4 0-.6.2-.7.2-.2.4-.4.6-.6.2-.2.2-.3.3-.5.1-.2 0-.4 0-.6-.1-.2-.9-2.1-1.2-2.8-.3-.7-.6-.6-.9-.6h-.7c-.2 0-.6.1-.8.4-.3.3-1.1 1.1-1.1 2.6s1.1 3 1.3 3.2c.2.2 2.2 3.4 5.4 4.8.8.3 1.4.5 1.9.6.8.2 1.5.2 2 .1.6-.1 2.1-.8 2.4-1.6.3-.8.3-1.5.2-1.6-.1-.1-.3-.2-.7-.4z"/>
            </svg>
          </span>
        <% end %>

        <%= link_to "https://instagram.com/energia.pilates", target: "_blank", rel: "noopener", class: "floating-social-btn floating-social-btn--instagram", aria: { label: "Instagram" } do %>
          <span class="floating-social-icon" aria-hidden="true">
            <svg viewBox="0 0 24 24" width="22" height="22" xmlns="http://www.w3.org/2000/svg">
              <path fill="currentColor" d="M7.5 2h9A5.5 5.5 0 0 1 22 7.5v9A5.5 5.5 0 0 1 16.5 22h-9A5.5 5.5 0 0 1 2 16.5v-9A5.5 5.5 0 0 1 7.5 2Zm9 2h-9A3.5 3.5 0 0 0 4 7.5v9A3.5 3.5 0 0 0 7.5 20h9a3.5 3.5 0 0 0 3.5-3.5v-9A3.5 3.5 0 0 0 16.5 4Zm-4.5 4a4.5 4.5 0 1 1 0 9 4.5 4.5 0 0 1 0-9Zm0 2a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5ZM17.75 6.25a1 1 0 1 1 0 2 1 1 0 0 1 0-2Z"/>
            </svg>
          </span>
        <% end %>
      </div>
    <% end %>
  </body>
</html>
